---
import Layout from "@layout";
import Preview from "@components/Preview.astro";
import Canvas from "@components/Canvas.astro";
import { Button } from "@mauroviveros/ui";
---

<Layout>
  <Preview name="Button" category="Actions" icon="lucide:mouse-pointer-click">
    <Canvas>
      <div class="grid grid-cols-3 gap-x-2 gap-y-4">
        <!-- PRIMARY -->
        <div class="flex items-center justify-center gap-2">
          <Button color="primary" variant="solid" size="xs">Click me</Button>
          <Button color="primary" variant="solid" size="sm">Click me</Button>
          <Button color="primary" variant="solid" size="base">Click me</Button>
          <Button color="primary" variant="solid" size="lg">Click me</Button>
        </div>
        <div class="flex items-center justify-center gap-2">
          <Button color="primary" variant="outline" size="xs">Click me</Button>
          <Button color="primary" variant="outline" size="sm">Click me</Button>
          <Button color="primary" variant="outline" size="base">Click me</Button>
          <Button color="primary" variant="outline" size="lg">Click me</Button>
        </div>
        <div class="flex items-center justify-center gap-2">
          <Button color="primary" variant="ghost" size="xs">Click me</Button>
          <Button color="primary" variant="ghost" size="sm">Click me</Button>
          <Button color="primary" variant="ghost" size="base">Click me</Button>
          <Button color="primary" variant="ghost" size="lg">Click me</Button>
        </div>

        <!-- SECONDARY -->
        <div class="flex items-center justify-center gap-2">
          <Button color="secondary" variant="solid" size="xs">Click me</Button>
          <Button color="secondary" variant="solid" size="sm">Click me</Button>
          <Button color="secondary" variant="solid" size="base">Click me</Button>
          <Button color="secondary" variant="solid" size="lg">Click me</Button>
        </div>
        <div class="flex items-center justify-center gap-2">
          <Button color="secondary" variant="outline" size="xs">Click me</Button>
          <Button color="secondary" variant="outline" size="sm">Click me</Button>
          <Button color="secondary" variant="outline" size="base">Click me</Button>
          <Button color="secondary" variant="outline" size="lg">Click me</Button>
        </div>
        <div class="flex items-center justify-center gap-2">
          <Button color="secondary" variant="ghost" size="xs">Click me</Button>
          <Button color="secondary" variant="ghost" size="sm">Click me</Button>
          <Button color="secondary" variant="ghost" size="base">Click me</Button>
          <Button color="secondary" variant="ghost" size="lg">Click me</Button>
