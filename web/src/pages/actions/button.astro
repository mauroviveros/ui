          <Button color="accent" variant="ghost" size="xs">Click me</Button>
          <Button color="accent" variant="ghost" size="sm">Click me</Button>
          <Button color="accent" variant="ghost" size="base">Click me</Button>
          <Button color="accent" variant="ghost" size="lg">Click me</Button>
        </div>

        <!-- DESTRUCTIVE -->
        <div class="flex items-center justify-center gap-2">
          <Button color="destructive" variant="solid" size="xs">Click me</Button>
